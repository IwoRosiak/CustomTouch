            <WorkToMake>1000</WorkToMake>
        </statBases>
        <conflictingTags>
            <li>singleHand</li>
        </conflictingTags>
    </ThingDef>
    
<!--UNDERMOUNT-->
    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="Attachment_Industrial">
        <defName>Attachment_Undermount_Straight_Grip</defName>
        <label>Composite Grip</label>
        <weaponPart>undermount</weaponPart>
        <description>Rubber handle which can be easily attached under most guns with mounting. Useful for controlling recoil. It is cheap and efficient.</description>
        <warmupMult>-0.02</warmupMult>
        <cooldownMult>-0.1</cooldownMult>
