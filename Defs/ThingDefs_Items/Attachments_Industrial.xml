            <MarketValue>40</MarketValue>
            <Mass>0.1</Mass>
        </statBases>
        <requiredTags>
            <li>undermountRail</li>
        </requiredTags>
    </ThingDef>

    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="Attachment_Industrial">
        <defName>Attachment_Undermount_Angled_Grip</defName>
        <label>Angled Grip</label>
        <weaponPart>undermount</weaponPart>
        <description>Rubber handle which can be easily attached under most guns. Its form allows for moderate recoil control and improved aiming times. It is cheap and efficient.</description>
        <warmupMult>-0.05</warmupMult>
        <cooldownMult>-0.04</cooldownMult>
        <statBases>
            <MarketValue>40</MarketValue>
            <Mass>0.1</Mass>
        </statBases>
        <requiredTags>
            <li>undermountRail</li>
        </requiredTags>
    </ThingDef>

