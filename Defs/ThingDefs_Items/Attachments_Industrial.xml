<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <ThingDef Name="Attachment_Industrial" ParentName="GunModBase" Abstract="True">
        <recipeMaker>
            <skillRequirements>
                <Crafting>6</Crafting>
            </skillRequirements>
        </recipeMaker>
        <costList>
            <Steel>25</Steel>
            <Plasteel>5</Plasteel>
            <ComponentIndustrial>1</ComponentIndustrial>
        </costList>
        <statBases>
            <WorkToMake>500</WorkToMake>
        </statBases>
    </ThingDef>
    
<!--SCOPES-->
    
    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="Attachment_Industrial">
        <defName>Attachment_Small_NV_Scope</defName>
        <label>Small night-vision scope</label>
        <weaponPart>scope</weaponPart>
        <description>Small scope which comes with night-vision which reduces penalty when shooting in the dark. This particular scope was designed to mantain long distance capabilities but it sacrafices night-vision strength for it.</description>
        <recipeMaker>
            <skillRequirements>
                <Crafting>8</Crafting>
            </skillRequirements>
        </recipeMaker>
        <costList>
            <Steel>10</Steel>
            <Plasteel>5</Plasteel>
            <ComponentIndustrial>3</ComponentIndustrial>
        </costList>
        <accuracyLong>-0.05</accuracyLong>
        <nightvision>0.2</nightvision>
        <statBases>
            <MarketValue>230</MarketValue>
            <Mass>0.3</Mass>
            <WorkToMake>650</WorkToMake>
        </statBases>
        <requiredTags>
            <li>hasScopeRail</li>
        </requiredTags>
    </ThingDef>
    

    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="Attachment_Industrial">
        <defName>Attachment_Reflex_Sight</defName>
        <label>Reflex Sight</label>
        <weaponPart>scope</weaponPart>
        <description>Classic reflex sight which dramatically improves aim on a lot of weapons.</description>
        <accuracyTouch>0.05</accuracyTouch>
        <accuracyShort>0.10</accuracyShort>
        <accuracyMedium>0.03</accuracyMedium>
        <warmupMult>0.05</warmupMult>
        <statBases>
            <MarketValue>70</MarketValue>
            <Mass>0.1</Mass>
            <WorkToMake>500</WorkToMake>
        </statBases>
        <conflictingTags>
            <li>hasScope</li>
        </conflictingTags>
    </ThingDef>
    
    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="Attachment_Industrial">
        <defName>Attachment_Medium_Scope</defName>
        <label>Scope(x4-10)</label>
        <weaponPart>scope</weaponPart>
        <description>A scope with moderate zoom. Effective on single shot weapons. It's sheer size makes the weapon a bit more cumbersome to carry.</description>
        <recipeMaker>
            <skillRequirements>
                <Crafting>10</Crafting>
            </skillRequirements>
        </recipeMaker>
        <accuracyTouch>-0.1</accuracyTouch>
        <accuracyShort>-0.02</accuracyShort>
        <accuracyMedium>0.06</accuracyMedium>
        <accuracyLong>0.10</accuracyLong>
        <zoomvision>0.2</zoomvision>
        <warmupMult>-0.06</warmupMult>
        <statBases>
            <MarketValue>160</MarketValue>
            <Mass>1</Mass>
            <WorkToMake>800</WorkToMake>
        </statBases>
        <costList>
            <Steel>15</Steel>
            <Plasteel>5</Plasteel>
            <ComponentIndustrial>3</ComponentIndustrial>
        </costList>
        <requiredTags>
            <li>hasScopeRail</li>
        </requiredTags>
    </ThingDef>
    
    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="Attachment_Industrial">
        <defName>Attachment_Small_Scope</defName>
        <label>Scope(x2-4)</label>
        <weaponPart>scope</weaponPart>
        <description>A scope with small zoom. Effective on automatic and semi automatic weapons. It makes the weapon a bit less handy to carry around.</description>
        <accuracyTouch>-0.05</accuracyTouch>
        <accuracyMedium>0.05</accuracyMedium>
        <accuracyLong>0.1</accuracyLong>
        <warmupMult>-0.03</warmupMult>
        <zoomvision>0.05</zoomvision>
        <statBases>
            <MarketValue>140</MarketValue>
            <Mass>0.8</Mass>
            <WorkToMake>500</WorkToMake>
        </statBases>
        <requiredTags>
            <li>hasScopeRail</li>
        </requiredTags>
    </ThingDef>

    

<!--STOCKS-->
    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="Attachment_Industrial">
        <defName>Attachment_Light_Stock</defName>
        <label>Light Stock</label>
        <weaponPart>stock</weaponPart>
        <description>A stock specificaly designed for small weapons like sub-machine guns and pistols. It makes the weapon more uncomfortable to carry around.</description>
        <accuracyTouch>0.1</accuracyTouch>
        <accuracyShort>0.02</accuracyShort>
        <warmupMult>-0.1</warmupMult>
        <cooldownMult>-0.2</cooldownMult>
        <statBases>
            <MarketValue>60</MarketValue>
            <Mass>0.2</Mass>
            <WorkToMake>500</WorkToMake>
        </statBases>
        <requiredTags>
            <li>noStock</li>
        </requiredTags>
    </ThingDef>
    
    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="Attachment_Industrial">
        <defName>Attachment_Skeleton_Stock</defName>
        <label>Skeleton Stock</label>
        <weaponPart>stock</weaponPart>
        <description>Cheap, light-weight stock thanks to it skeletar structure.</description>
        <warmupMult>-0.1</warmupMult>
        <cooldownMult>-0.25</cooldownMult>
        <statBases>
            <MarketValue>90</MarketValue>
            <Mass>0.4</Mass>
            <WorkToMake>500</WorkToMake>
        </statBases>
        <conflictingTags>
            <li>singleHand</li>
        </conflictingTags>
    </ThingDef>
    
    
<!--UNDERMOUNT-->
    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="Attachment_Industrial">
        <defName>Attachment_Undermount_Straight_Grip</defName>
        <label>Composite Grip</label>
        <weaponPart>undermount</weaponPart>
        <description>Rubber handle which can be easily attached under most guns with mounting. Useful for controlling recoil. It is cheap and efficient.</description>
        <warmupMult>-0.02</warmupMult>
        <cooldownMult>-0.1</cooldownMult>
        <statBases>
            <MarketValue>40</MarketValue>
            <Mass>0.1</Mass>
            <WorkToMake>500</WorkToMake>
        </statBases>
        <requiredTags>
            <li>undermountRail</li>
        </requiredTags>
    </ThingDef>

    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="Attachment_Industrial">
        <defName>Attachment_Undermount_Angled_Grip</defName>
        <label>Angled Grip</label>
        <weaponPart>undermount</weaponPart>
        <description>Rubber handle which can be easily attached under most guns. Its form allows for moderate recoil control and improved aiming times. It is cheap and efficient.</description>
        <warmupMult>-0.05</warmupMult>
        <cooldownMult>-0.04</cooldownMult>
        <statBases>
            <MarketValue>40</MarketValue>
            <Mass>0.1</Mass>
            <WorkToMake>500</WorkToMake>
        </statBases>
        <requiredTags>
            <li>undermountRail</li>
        </requiredTags>
    </ThingDef>

