        <accuracyShort>0.04</accuracyShort>
        <accuracyMedium>0.06</accuracyMedium>
        <accuracyLong>0.03</accuracyLong>
        <statBases>
            <MarketValue>280</MarketValue>
            <Mass>0.2</Mass>
            <WorkToMake>1500</WorkToMake>
        </statBases>
        <conflictingTags>
            <li>singleHand</li>
            <li>shotgun</li>
        </conflictingTags>
    </ThingDef>
    
    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="Attachment_Industrial">
        <defName>Attachment_Precision_Slide</defName>
