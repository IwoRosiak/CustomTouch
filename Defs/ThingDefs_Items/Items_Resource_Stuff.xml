<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="GunModBase" Abstract="True">
    <thingClass>ThingWithComps</thingClass>
    <category>Item</category>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <selectable>true</selectable>
    <altitudeLayer>Item</altitudeLayer>
    <stackLimit>1</stackLimit>
    <statBases>
      <Beauty>-4</Beauty>
      <MarketValue>1.9</MarketValue>
      <Mass>0.5</Mass>
    </statBases>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
    <alwaysHaulable>true</alwaysHaulable>
    <drawGUIOverlay>true</drawGUIOverlay>
    <rotatable>false</rotatable>
    <pathCost>14</pathCost>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <useHitPoints>false</useHitPoints>
    <healthAffectsPrice>false</healthAffectsPrice>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <burnableByRecipe>false</burnableByRecipe>
    <smeltable>true</smeltable>
  </ThingDef>

  <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="GunModBase">
    <defName>Scope</defName>
    <label>scope</label>
    <weaponPart>scope</weaponPart>
    <description>Scope. Can be used to modify weapons.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/scope</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <cooldownTimeReduction>0.5</cooldownTimeReduction>
    <accuracyImproveLong>0.1</accuracyImproveLong>
    <accuracyImproveMedium>0.50</accuracyImproveMedium>
    <accuracyImproveShort>0.15</accuracyImproveShort>
    <accuracyImproveTouch>0.30</accuracyImproveTouch>
    <warmupTimeReduction>0.9</warmupTimeReduction>
    <damageIncrease>5.0</damageIncrease>
  </ThingDef>

  <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="GunModBase">
    <defName>Chuj</defName>
    <label>chujek</label>
    <weaponPart>stock</weaponPart>
    <description>Scope. Can be used to modify weapons.</description>


    <graphicData>
      <texPath>Things/Item/Resource/Steel</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>

  </ThingDef>

  <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="GunModBase">
    <defName>Magazine</defName>
    <label>magazine</label>
    <weaponPart>magazine</weaponPart>
    <description>Scope. Can be used to modify weapons.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Steel</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
  </ThingDef>

  <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="GunModBase">
    <defName>Stock</defName>
    <label>stock</label>
    <weaponPart>stock</weaponPart>
    <description>Scope. Can be used to modify weapons.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/stock</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>

</Defs>
