<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="GunModBase" Abstract="True">
    <thingClass>ThingWithComps</thingClass>
    <category>Item</category>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <selectable>true</selectable>
    <altitudeLayer>Item</altitudeLayer>
    <stackLimit>1</stackLimit>
    <statBases>
      <MarketValue>1.9</MarketValue>
      <Mass>0.5</Mass>
    </statBases>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
    <alwaysHaulable>true</alwaysHaulable>
    <drawGUIOverlay>true</drawGUIOverlay>
    <rotatable>false</rotatable>
    <pathCost>14</pathCost>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <useHitPoints>false</useHitPoints>
    <healthAffectsPrice>false</healthAffectsPrice>
    <thingCategories>
      <li>Attachment</li>
    </thingCategories>
    <burnableByRecipe>false</burnableByRecipe>
    <smeltable>true</smeltable>
    <graphicData>
      <!--<texPath>Things/Item/Equipment/WeaponRanged/scope</texPath>-->
      <texPath>Things/Item/Health/HealthItem</texPath>
      <color>(64, 64, 64)</color>
      <drawSize>0.80</drawSize>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>

  <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="GunModBase">
    <defName>Scope</defName>
    <label>scope</label>
    <weaponPart>scope</weaponPart>
    <description>Scope. Can be used to modify weapons.</description>
    <onWeaponGraphic>
      <texPath>Things/Item/Equipment/WeaponRanged/scope</texPath>
      <drawSize>0.80</drawSize>
      <graphicClass>Graphic_Single</graphicClass>
    </onWeaponGraphic>
  <!--  <alternateGraphics>
      <texPath>Things/Item/Equipment/WeaponRanged/scope</texPath>
    </alternateGraphics> -->
    <cooldownTimeReduction>0.5</cooldownTimeReduction>
    <accuracyImproveLong>0.1</accuracyImproveLong>
    <accuracyImproveMedium>0.50</accuracyImproveMedium>
    <accuracyImproveShort>0.15</accuracyImproveShort>
    <accuracyImproveTouch>0.30</accuracyImproveTouch>
    <warmupTimeReduction>0.9</warmupTimeReduction>
    <damageIncrease>5.0</damageIncrease>
  </ThingDef>

  <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="GunModBase">
    <defName>Chuj</defName>
    <label>chujek</label>
    <weaponPart>debug</weaponPart>
    <description>Scope. Can be used to modify weapons.</description>
    <onWeaponGraphic>
      <texPath>frame</texPath>
      <drawSize>1</drawSize>
      <graphicClass>Graphic_Single</graphicClass>
    </onWeaponGraphic>
  </ThingDef>

  <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="GunModBase">
    <defName>Bolt_Action_Magazine</defName>
    <label>Bolt-Action Magazine</label>
    <weaponPart>magazine</weaponPart>
    <description>Scope. Can be used to modify weapons.</description>
    <onWeaponGraphic>
      <texPath>Things/Item/Equipment/WeaponRanged/bolt_action_magazine</texPath>
      <drawSize>0.80</drawSize>
      <graphicClass>Graphic_Single</graphicClass>
    </onWeaponGraphic>
    <cooldownTimeReduction>0.2</cooldownTimeReduction>
  </ThingDef>

