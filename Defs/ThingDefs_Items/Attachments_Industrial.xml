<!-- BARREL EXT -->
    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="Attachment_Industrial">
        <defName>Attachment_Nozzle</defName>
        <label>Nozzle</label>
        <weaponPart>barrelExt</weaponPart>
        <description>A nozzle crafted using well mantained spare parts and specialist equipment. It works through redirecting gas of the outgoing bullet to increase bullets speed.</description>
        <damageMult>0.05</damageMult>
        <cooldownMult>0.05</cooldownMult>
        <statBases>
            <MarketValue>40</MarketValue>
            <Mass>0.1</Mass>
        </statBases>
    </ThingDef>


    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="GunModBase">
        <defName>Attachment_Silencer</defName>
        <label>Silencer</label>
        <weaponPart>barrelExt</weaponPart>
        <description>A silencer which muffles the shots what allows for safer hunting at the expense of damage.</description>
        <silencerEffect>0.30</silencerEffect>
        <burstShotsOffset>2</burstShotsOffset>
    </ThingDef> 

