<Defs>
    <ThingDef Name="Attachment_Industrial" ParentName="GunModBase" Abstract="True">
        <recipeMaker>
            <skillRequirements>
                <Crafting>6</Crafting>
            </skillRequirements>
        </recipeMaker>
        <costList>
            <Steel>25</Steel>
            <Plasteel>5</Plasteel>
            <ComponentIndustrial>1</ComponentIndustrial>
        </costList>
        <statBases>
            <WorkToMake>500</WorkToMake>
        </statBases>
    </ThingDef>
    
<!--SCOPES-->
    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="Attachment_Industrial">
        <defName>Attachment_ACOG</defName>
        <label>ACOG</label>
        <weaponPart>scope</weaponPart>
        <description>Specialist sight which allows for moderate amount of zoom. Highly effective on medium distance encounters.</description>
        <accuracyTouch>-0.05</accuracyTouch>
        <accuracyMedium>0.10</accuracyMedium>
        <accuracyLong>0.03</accuracyLong>
        <warmupMult>-0.05</warmupMult>
        <zoomvision>0.05</zoomvision>
        <statBases>
            <MarketValue>100</MarketValue>
            <Mass>0.2</Mass>
        </statBases>
    </ThingDef>

    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="Attachment_Industrial">
        <defName>Attachment_Dot_Sight</defName>
        <label>Dot Sight</label>
        <weaponPart>scope</weaponPart>
        <description>Classic dot sight which dramatically improves aiming performance on a lot of weapons.</description>
        <accuracyTouch>0.05</accuracyTouch>
        <accuracyShort>0.10</accuracyShort>
        <accuracyMedium>0.03</accuracyMedium>
        <warmupMult>0.05</warmupMult>
        <statBases>
            <MarketValue>70</MarketValue>
            <Mass>0.1</Mass>
        </statBases>
        <conflictingTags>
            <li>hasScope</li>
        </conflictingTags>
    </ThingDef>

    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="Attachment_Industrial">
        <defName>Attachment_Big_Scope</defName>
        <label>Scope(x8-16)</label>
        <weaponPart>scope</weaponPart>
        <description>A scope with high zoom. Effective on single shot weapons. It's sheer size makes the weapon a bit more cumbersome to carry.</description>
        <recipeMaker>
            <skillRequirements>
                <Crafting>12</Crafting>
            </skillRequirements>
        </recipeMaker>
        <accuracyTouch>-0.15</accuracyTouch>
        <accuracyShort>-0.05</accuracyShort>
        <accuracyMedium>0.08</accuracyMedium>
        <accuracyLong>0.15</accuracyLong>
        <zoomvision>0.4</zoomvision>
        <warmupMult>-0.1</warmupMult>
        <statBases>
            <MarketValue>180</MarketValue>
            <Mass>1.3</Mass>
            <WorkToMake>1000</WorkToMake>
        </statBases>
        <costList>
            <Steel>20</Steel>
            <Plasteel>10</Plasteel>
            <ComponentIndustrial>4</ComponentIndustrial>
        </costList>
        <requiredTags>
            <li>hasScopeRail</li>
        </requiredTags>
    </ThingDef>
    
    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="Attachment_Industrial">
        <defName>Attachment_Small_Scope</defName>
        <label>Scope(x2-4)</label>
        <weaponPart>scope</weaponPart>
        <description>A scope with small zoom. Effective on automatic and semi automatic weapons. It makes the weapon a bit less handy to carry around.</description>
        <accuracyTouch>-0.05</accuracyTouch>
        <accuracyMedium>0.05</accuracyMedium>
        <accuracyLong>0.1</accuracyLong>
        <warmupMult>-0.03</warmupMult>
        <zoomvision>0.05</zoomvision>
        <statBases>
            <MarketValue>140</MarketValue>
            <Mass>0.8</Mass>
        </statBases>
        <requiredTags>
            <li>hasScopeRail</li>
        </requiredTags>
    </ThingDef>

    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="Attachment_Industrial">
        <defName>Attachment_NV_Scope</defName>
        <label>Night-vision Scope</label>
        <weaponPart>scope</weaponPart>
        <description>Scope which comes with night-vision which reduces penalty when shooting in the dark. It's short range forces the user to shoot from closer distance.</description>
        <recipeMaker>
            <skillRequirements>
                <Crafting>10</Crafting>
            </skillRequirements>
        </recipeMaker>
        <costList>
            <Steel>15</Steel>
            <Plasteel>15</Plasteel>
            <ComponentIndustrial>5</ComponentIndustrial>
        </costList>
        <accuracyMedium>-0.05</accuracyMedium>
        <accuracyLong>-0.4</accuracyLong>
        <nightvision>0.5</nightvision>
        <zoomvision>0.2</zoomvision>
        <statBases>
            <MarketValue>300</MarketValue>
            <Mass>0.7</Mass>
            <WorkToMake>1000</WorkToMake>
        </statBases>
        <requiredTags>
            <li>hasScopeRail</li>
        </requiredTags>
    </ThingDef>
    
    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="Attachment_Industrial">
        <defName>Attachment_Small_NV_Scope</defName>
        <label>Small night-vision scope</label>
        <weaponPart>scope</weaponPart>
        <description>Small scope which comes with night-vision which reduces penalty when shooting in the dark. This particular scope was designed to mantain long distance capabilities but it sacrafices night-vision strength for it.</description>
        <recipeMaker>
            <skillRequirements>
                <Crafting>8</Crafting>
            </skillRequirements>
        </recipeMaker>
        <costList>
            <Steel>10</Steel>
            <Plasteel>5</Plasteel>
            <ComponentIndustrial>3</ComponentIndustrial>
        </costList>
        <accuracyLong>-0.05</accuracyLong>
        <nightvision>0.2</nightvision>
        <statBases>
            <MarketValue>230</MarketValue>
            <Mass>0.3</Mass>
            <WorkToMake>650</WorkToMake>
        </statBases>
        <requiredTags>
            <li>hasScopeRail</li>
        </requiredTags>
    </ThingDef>

<!--STOCKS-->
    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="Attachment_Industrial">
        <defName>Attachment_Light_Stock</defName>
        <label>Light Stock</label>
        <weaponPart>stock</weaponPart>
        <description>A stock specificaly designed for small weapons like sub-machine guns and pistols. It makes the weapon more uncomfortable to carry around.</description>
        <accuracyTouch>0.1</accuracyTouch>
        <accuracyShort>0.02</accuracyShort>
        <warmupMult>-0.1</warmupMult>
        <cooldownMult>-0.2</cooldownMult>
        <statBases>
            <MarketValue>60</MarketValue>
            <Mass>0.2</Mass>
        </statBases>
        <requiredTags>
            <li>noStock</li>
        </requiredTags>
    </ThingDef>
    
    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="Attachment_Industrial">
        <defName>Attachment_Skeleton_Stock</defName>
