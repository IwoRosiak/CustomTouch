<!-- BARREL EXT -->
    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="Attachment_Industrial">
        <defName>Attachment_Compensator</defName>
        <label>Compensator</label>
        <weaponPart>barrelExt</weaponPart>
        <description>Reduces weapons recoil and increases users capabilities of keeping weapon on the target while firing. It makes the gun much louder.</description>
        <accuracyTouch>0.2</accuracyTouch>
        <accuracyShort>0.2</accuracyShort>
        <accuracyMedium>0.1</accuracyMedium>
        <warmupMult>-0.05</warmupMult>
        <cooldownMult>-0.1</cooldownMult>
        <silencerEffect>-0.1</silencerEffect>
    </ThingDef>

    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="Attachment_Industrial">
        <defName>Attachment_Muzzle_Break</defName>
        <label>Muzzle break</label>
        <weaponPart>barrelExt</weaponPart>
        <description>Greatly reduces weapons recoil. It makes the gun much louder.</description>
        <warmupMult>-0.15</warmupMult>
        <cooldownMult>-0.3</cooldownMult>
        <silencerEffect>-0.05</silencerEffect>
    </ThingDef>
    
    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="Attachment_Industrial">
        <defName>Attachment_Pistol_Muzzle_Break</defName>
        <label>Pistol muzzle break</label>
        <weaponPart>barrelExt</weaponPart>
        <description>Greatly reduces weapons recoil. It makes the gun much louder. This muzzle break was specificaly designed for pistols.</description>
        <warmupMult>-0.25</warmupMult>
        <cooldownMult>-0.5</cooldownMult>
        <silencerEffect>-0.05</silencerEffect>
        <requiredTags>
            <li>pistol</li>
        </requiredTags>
    </ThingDef>

    <ThingDef Class="GunNut.GN_AttachmentDef" ParentName="GunModBase">
        <defName>Attachment_Silencer</defName>
        <label>Silencer</label>
        <weaponPart>barrelExt</weaponPart>
        <description>A silencer which muffles the shots what allows for safer hunting at the expense of damage.</description>
        <silencerEffect>0.40</silencerEffect>
        <damageMult>-0.05</damageMult>
    </ThingDef> 

    <!--RECEIVER  -->
